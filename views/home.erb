<!--
 * homepage
-->
<div class="container">
  <div class="jumbotron">
    今天，又遇到棘手的法律问题啦？ &nbsp; <a class="btn btn-primary btn-lg" href="<%= url('/ask') %>" role="button">我要提问</a>
  </div>

  <div class="row">
    <div class="col-md-9">
      <ul class="nav nav-tabs">
        <li role="presentation" class="<%= 'active' if @sort_by == 'default' %>"><a href="/">最新</a></li>
        <li role="presentation" class="<%= 'active' if @sort_by == 'score' %>"><a href="/?sort=score">最热</a></li>
        <li role="presentation" class="<%= 'active' if @sort_by == 'views' %>"><a href="/?sort=views">未回答</a></li>
      </ul>

      <% @qs.each do |q| %>
        <div class="listed-question">

          <div class="rank">
            <div class="scores">
              <%= q.score %><small>投票</small>
            </div>
            <div class="answered">
              60<small>解决</small>
            </div>
            <div class="views">
              <%= q.views %><small>浏览</small>
            </div>
          </div>

          <div class="question">
            <div class="user"><a href="#">亚里士多德 在6分钟前回答</a></div>
            <div class="title">
              <a href="#"><%= q.title %></a> &nbsp;
              <span class="label label-primary">哲学问题</span>
              <span class="label label-primary">难题</span>
            </div>
          </div>

        </div>
      <% end %>

      <p>更多...</p>

    </div>

    <div class="col-md-3">
      <div class="tags">
          <h6>热门标签</h6>
          <span class="label label-primary">aaa</span>
          <span class="label label-primary">ab</span>
          <span class="label label-primary">aaddd</span>
          <span class="label label-primary">aasssdfs</span>
          <span class="label label-primary">axxx</span>
          <span class="label label-primary">hh</span>
          <span class="label label-primary">aaa</span>
          <span class="label label-primary">aaa11</span>
      </div>
    </div>
  </div>
</div> <!-- end of container -->
