<div class="container">
  <h3>投诉处理</h3>

  <div class="row">
    <div class="col-md-3">
      <p>
        快速查看被投诉的用户列表
      </p>

      <div>
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>
                login_name
              </th>
              <th>
                投诉数量
              </th>
            </tr>
          </thead>
          <tbody>
            <% @reported_users.each do |user| %>
            <tr>
              <td>
                <a href="/admin/account?qn=<%= user.login_name %>">
                  <%= user.login_name %>
                </a>
              </td>
              <td>
                <%= user.has_reports %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-md-8 col-md-offset-1">
      <p>
        投诉列表
      </p>

      <div>
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>
                ID
              </th>
              <th>
                投诉人
              </th>
              <th>
                投诉对象
              </th>
              <th>
                投诉时间
              </th>
            </tr>
          </thead>
          <tbody>
            <% @all_reports.each do |r| %>
            <tr>
              <td>
                <%= r.id %>
              </td>
              <td>
                <%= r.reporter.login_name %>
              </td>
              <td>
                <% if r.reportable_type == 'User' %>
                <a href="/admin/account?uid=<%= r.reportable_id %>">
                  (<%= r.reportable_type %>) ID=<%= r.reportable_id %>
                </a>
                <% else r.reportable_type == 'Question' %>
                <a href="/admin/question?qid=<%= r.reportable_id %>">
                  (<%= r.reportable_type %>) ID=<%= r.reportable_id %>
                </a>
                <% end %>
              </td>
              <td>
                <%= r.created_at %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>

  </div>
</div>
