<% unless @hide_jumbotron %>
<div class="myjumbotron-home" aria-hidden="true">
  <div>
    <img src="/logo.png" class="logo-home-head" alt="韩非子说"/>
  </div>
  <div>
    <p>
      韩非子说&trade; 是讨论和学习法律知识的地方。<br />
      帮助他人，提高自己，还可以获取社会规则需要的所谓声誉。<br />
      法律人啊，向更高更远的地方前进吧。
    </p>
    <p>
      现在就<a class="btn btn-default btn-sm" href="/login">登录</a>
      <a class="btn btn-default btn-sm" href="/user/signup">注册</a>
      或者<a class="btn btn-default btn-sm" href="/ask">提问</a>吧！
    </p>
  </div>
  <div class="clear"></div>
</div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-9">
      <ul class="nav nav-tabs">
        <li role="presentation" class="<%= 'active' if @sort_by == 'default' %>">
          <a href="/" title="Latest">最新</a>
        </li>
        <li role="presentation" class="<%= 'active' if @sort_by == 'hot' %>">
          <a href="/?tab=hot" title="Hottest">最热</a>
        </li>
        <li role="presentation" class="<%= 'active' if @sort_by == 'noanswer' %>">
          <a href="/?tab=noanswer" title="Unanswered">未回答</a>
        </li>
      </ul>

      <% @qs.each do |q| %>
        <div class="listed-question">
          <div class="rank">
            <div class="votes">
              <%= get_format_number(q.scores) %><small>得分</small>
            </div>
            <div <% if q.accepted_answer_id != 0 %>
                      class="answered"
                 <% elsif q.answers.length > 0 %>
                      class="answers"
                 <% end %> >
              <%= get_format_number(q.answers.length) %><small>回答</small>
            </div>
            <div class="views">
              <%= get_format_number(q.views) %><small>浏览</small>
            </div>
          </div>

          <div class="question">
            <div class="user">
              <a href="<%= q.get_last_event.invoker.url %>">
                <%= q.get_last_event.invoker.info.nickname %>
              </a>
              在<%= time_ago_in_words_zh(q.get_last_event.created_at) %>
              <%= q.get_last_event.event_type_zh %>
            </div>
            <div class="title">
              <a href="<%= q.url %>"><%= q.title %></a>
              <% q.tags.each do |t| %>
                <span class="q_tag"><%= t.name %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <p class="margin-top-20">
        查看&nbsp;<a class="btn btn-default btn-sm" href="/questions">所有问题</a>
      </p>
      <p class="margin-top-20">
        您可以通过&nbsp;
        <a class="btn btn-default btn-sm" href="/tags">标签</a>&nbsp;
        或者&nbsp;
        <a class="btn btn-default btn-sm" href="/search">搜索</a>&nbsp;
        功能更加精确地查找问题
      </p>
    </div>

    <div class="col-md-3">
      <%= render_ad %>

      <div class="tags">
        <h6>热门标签</h6>
        <% @hot_tags.each do |t| %>
          <a href="javascript:void(0);" class="tag"
             onclick="javascript:go_tag(<%= t.id %>);">
            <%= t.name %>
          </a>
        <% end %>
      </div>

      <%= render_job_posts %>

    </div>
  </div>
</div>
