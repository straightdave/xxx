<div class="container">
  <div class="row">
    <div class="col-md-9">
      <span class="watchlist-head">我关注的问题</span>

      <table class="table">
        <% @watchlist.order(created_at: :desc).each do |q| %>
        <tr>
          <td>
            <button type="button"
                    class="btn btn-default btn-sm"
                    onclick="javascript:unwatch1(<%= q.id %>);">
               移除关注
            </button>
          </td>
          <td>
            <a href="/q/<%= q.id %>">
              <%= q.title %>
            </a>
          </td>
          <td>
            <%= time_ago_in_words_zh(q.created_at) %>
          </td>
        </tr>
        <% end %>
      </table>

    </div>
    <div class="col-md-3">
      <%= get_ad %>
    </div>
  </div>
</div>
