<div class="container-fluid">
  <div class="row">
    <div class="profile-background">
    </div>
  </div>


  <div class="row">
    <div class="col-md-3">
      <div class="profile-pane">
        <div class="avatar">
          <img alt="<%= @user_info.nickname %>"
               src="<%= @user_info.avatar || "/avatar.jpg"%>">
        </div>

        <div class="namebox">
          <h4 class="nickname"><%= @user_info.nickname %><br>
            <small>@<%= @user.login_name %></small>
          </h4>
          <blockquote>
            <%= @user_info.intro || "暂时没有简介哦~" %>
          </blockquote>

          <p>
            <span class="glyphicon glyphicon-map-marker"></span>
            &nbsp; <%= @user_info.city %>
          </p>
          <p>
            <span class="glyphicon glyphicon-envelope"></span>
            &nbsp; <%= @user_info.email %>
          </p>
          <p>
            <span id="whensignup">
              <%= time_ago_in_words_zh(@user.created_at) %>加入
            </span>
          </p>



          <!-- SNS info
          <div class="sns-pane">
            <div class="sns-table">
              <table class="table">
                <tr>
                  <th>following</th>
                  <th>followers</th>
                </tr>
                <tr>
                  <td><%= @user.followee_size %></td>
                  <td><%= @user.follower_size %></td>
                </tr>
              </table>
            </div>

            <% if @user.id != get_user_id %>
              <% if @followed %>
                <a href="javascript:void(0);"
                   class="btn btn-default btn-sm"
                   title="unfollow"
                   onclick="javascript:cancel_follow('<%= @user.login_name %>');">
                  取消跟随
                </a>
              <% else %>
                <a href="javascript:void(0);"
                   class="btn btn-primary btn-sm"
                   title="follow"
                   onclick="javascript:do_follow('<%= @user.login_name %>');">
                  跟随
                </a>
              <% end %>
            <% end %>
          </div>
        -->

        </div>
      </div> <!-- end of profile -->
    </div><!-- end of col-3 on the left -->

    <div class="col-md-6">
      <div class="profile-mid-pane">

        <div class="user-stat-pane">
          <ul>
            <li>
              <div class="each-stat">
                <h5>声望</h5>
                <span>10</span>
              </div>
            </li>
            <li>
              <div class="each-stat">
                <h5>提问</h5>
                <span>10</span>
              </div>
            </li>
            <li>
              <div class="each-stat">
                <h5>回答</h5>
                <span>10</span>
              </div>
            </li>
            <li>
              <div class="each-stat">
                <h5>关注</h5>
                <span>10</span>
              </div>
            </li>
            <li class="last">
              <div class="each-stat">
                <h5>粉丝</h5>
                <span>10</span>
              </div>
            </li>
          </ul>
          <div class="clear">
          </div>
        </div>


        <!-- lastest actions -->
        <div class="eventbox-list">
          <% if @events.size > 0 %>

            <% @events.each do |event| %>
            <div class="eventbox">
              <span style="width:10%;">
                <%= time_ago_in_words_zh(event.created_at) %>
              </span>
              <span style="width:7%;">
                <%= event.event_type_zh %>
              </span>


              <h2>
                <a href="<%= event.target_url %>">
                  <%= event.target_title %>
                </a>
              </h2>
            </div>
            <% end %>

          <% else %>
            暂无动态
          <% end %>
        </div>
        <hr>

        <!-- fav tags -->
        <h5>擅长标签</h5>
        <div class="my-expert-tags">
          <% @user.top_expert_tags(5).each do |rel| %>
            <div class="each-expert-tag">
              <a href="javascript:void(0);" class="tag"
                 onclick="javascript:go_tag(<%= rel.tag_id %>);">
                <%= rel.tag.name %>
              </a>
              标签分数
              <%= rel.expert_score %>
            </div>
          <% end %>
          <div class="clear"></div>
        </div>

      </div> <!-- end of profile-mid-pane -->
    </div> <!-- end of col-6 in the mid -->

    <div class="col-md-3">
      <div class="profile-right-pane" style="height: 300px;">
        Wahahahahaha, hahahaha
      </div>
      <div class="profile-right-pane" style="height: 200px;">
        Wahaha,hahahaha, hahahahah
        hshsm hshshs shhsh hs h
      </div>

      <div class="ad-col-3">
        Ads here ...
      </div>

    </div>



  </div> <!-- end of the second row: main content -->
</div>
