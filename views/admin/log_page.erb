<div class="container">
  <div class="row">

    <form class="form-inline">
      <input type="text" class="form-control" name="qn" placeholder="管理员的login name"
        value="<%= @login_name %>" />
      <label for="start_at">开始时间</label>
      <input type="text" class="form-control" id="start_at" name="start_at"
             placeholder="yyyyMMddHHmmss" value="<%= @start_at %>" />
      <label for="end_at">结束时间</label>
      <input type="text" class="form-control" id="end_at" name="end_at"
             placeholder="yyyyMMddHHmmss" value="<%= @end_at %>" />
      <button type="submit" class="btn btn-primary btn-sm"> 搜索日志 </button>
    </form>

  </div>

  <hr />

  <div class="row">
    <div class="col-md-9">

      <table class='table table-striped table-bordered table-condensed'>
        <thead>
          <tr>
            <th>管理员id</th>
            <th>日志内容</th>
            <th>时间</th>
          </tr>
        </thead>
        <tbody>
        <% if !@logs.nil? && !@logs.empty? %>

          <% @logs.each do |log| %>
          <tr>
            <td>
              <%= log.user_id %>
            </td>
            <td>
              <%= log.log_text %>
            </td>
            <td>
              <%= log.created_at %>
            </td>
          </tr>
          <% end %>

        <% else %>
          <tr>
            <td colspan="3" align="center">=== 无 ===</td>
          </tr>
        <% end %>

        </tbody>
      </table>

      <%= render_pager_full %>

    </div>
  </div>
</div>
