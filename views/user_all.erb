<div class="container">
  <div class="listed-users">

    <% @users.each do |user| %>
    <div class="listed-user">
      <div class="float-left">
        <img class="avatar-listed"
        src="<%= user.avatar_src %>"
        alt="@<%= user.login_name %>"
        title="<%= user.login_name %>" />
      </div>

      <div class="user-detail float-left">
        <a class="anchor-username" href="<%= user.url %>">
          <%= user.info.nickname %>
          <span class="numbers-sm">
          <%= get_format_number(user.reputation) %>
          </span>
        </a>

        <p>
          注册于 <%= time_ago_in_words_zh(user.created_at) %>
          <br />

          <% user.top_expert_tags(3).each do |rel| %>
            <span class="q_tag"><%= rel.tag.name %></span>
          <% end %>
        </p>
      </div>

    </div>
    <% end %>

    <div class="clear"></div>
  </div>

  <%= render_pager_full %>
</div>
