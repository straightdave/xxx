<!-- search results -->
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2><%= " “#{@search_str}” " %><small>的搜索结果</small></h2>
      <hr>
      <div class="search-results">

        <% @results.each do |q| %>
          <div class="search-item">

            <div class="q-title">
              <a href="/q/<%= q.id %>"><%= q.title %></a>
            </div>

            <div class="q-authorinfo">
              <a href="<%= q.get_last_question_doer.url %>">
                <%= q.get_last_question_doer.login_name %>
              </a>
              在<%= time_ago_in_words_zh(q.get_last_question_event.created_at) %>
              <%= q.get_last_question_event.event_type_zh %>
            </div>

            <div class="q-content">
              <p>
                <%= get_abstract(q.content, 50) %>
              </p>
            </div>

          </div>
        <% end %>

      </div>
    </div>

    <div class="col-md-3">

    </div>
  </div>
</div>
